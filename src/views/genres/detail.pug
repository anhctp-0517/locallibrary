extends ../layout

block content
    h1 #{t('home.genre')} #{genre.name}
    div #[strong #{t('home.book')} ] 
    if genre_book && genre_book.length !== 0
        each genre_book, index in genre_books
            a(href=`/books/${genre_book.id}`) #{genre_book.title}
            div #{genre_book.summary}
    else
        div #{t('genre.emptyBookList')}
    hr
    div
        a(href=`/genres/${genre.id}/delete`) #{t('form.delete')}
    div
        a(href=`/genres/${genre.id}/update`) #{t('form.update')}