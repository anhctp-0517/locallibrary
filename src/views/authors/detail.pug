extends ../layout

block content 
    h1 #{t('home.author')} #{author.first_name} #{author.family_name}
    div #[strong #{t('home.book')} ] 
    if authorBooks.length !== 0
        each authorBook, index in authorBooks
            a(href=`/books/${authorBook.id}`) #{authorBook.title}
            div #{authorBook.summary}
    else
        div #{t('author.emptyBookList')}
    hr
    p
        a(href=`${author.id}/delete`) #{t('form.delete')}
        a(href=`${author.id}/update`) #{t('form.update')}